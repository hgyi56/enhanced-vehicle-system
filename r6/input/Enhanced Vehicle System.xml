<?xml version="1.0"?>
<bindings>

    <context name="VisionActions" append="true">
        <action name="ToggleCustomLights"   map="Vehicle_ToggleCustomLights" />
	</context>
    
    <context name="VehicleOnlyForward" append="true">
        <action name="HeadlightsCall"       map="Vehicle_HeadlightsCall" />
        <action name="ModdedCycleLights"    map="Vehicle_CycleLights" />
        <action name="CycleEngineStep1"     map="Vehicle_CycleEngine" />
        <action name="CycleEngineStep2"     map="Vehicle_CycleEngine" />
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
        <action name="CycleDome"            map="Vehicle_CycleDome" />
        <action name="CycleSpoiler"         map="Vehicle_CycleSpoiler" />
    </context>

    <context name="VehiclePassenger" append="true">
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
    </context>

    <!-- VEHICLE COMBAT - used when player is mounted as passenger and has weapon equipped -->
    <context name="VehicleCombat" append="true">
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
    </context>

    <context name="VehicleDriveBase" append="true">
        <action name="HeadlightsCall"       map="Vehicle_HeadlightsCall" />
        <action name="ModdedCycleLights"    map="Vehicle_CycleLights" />
        <action name="CycleEngineStep1"     map="Vehicle_CycleEngine" />
        <action name="CycleEngineStep2"     map="Vehicle_CycleEngine" />
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
        <action name="CycleDome"            map="Vehicle_CycleDome" />
        <action name="CycleSpoiler"         map="Vehicle_CycleSpoiler" />
    </context>

    <context name="VehicleRemoteControlDrive" append="true">
        <action name="HeadlightsCall"       map="Vehicle_HeadlightsCall" />
        <action name="ModdedCycleLights"    map="Vehicle_CycleLights" />
        <action name="CycleEngineStep1"     map="Vehicle_CycleEngine" />
        <action name="CycleEngineStep2"     map="Vehicle_CycleEngine" />
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
        <action name="CycleDome"            map="Vehicle_CycleDome" />
        <action name="CycleSpoiler"         map="Vehicle_CycleSpoiler" />
    </context>

    <context name="VehiclePassengerRemoteControlDrive" append="true">
        <action name="HeadlightsCall"       map="Vehicle_HeadlightsCall" />
        <action name="ModdedCycleLights"    map="Vehicle_CycleLights" />
        <action name="CycleEngineStep1"     map="Vehicle_CycleEngine" />
        <action name="CycleEngineStep2"     map="Vehicle_CycleEngine" />
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
        <action name="CycleDome"            map="Vehicle_CycleDome" />
        <action name="CycleSpoiler"         map="Vehicle_CycleSpoiler" />
    </context>

    <context name="BaseVehicleDriverCombat" append="true">
        <action name="HeadlightsCall"       map="Vehicle_HeadlightsCall" />
        <action name="ModdedCycleLights"    map="Vehicle_CycleLights" />
        <action name="CycleEngineStep1"     map="Vehicle_CycleEngine" />
        <action name="CycleEngineStep2"     map="Vehicle_CycleEngine" />
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
        <action name="CycleDome"            map="Vehicle_CycleDome" />
        <action name="CycleSpoiler"         map="Vehicle_CycleSpoiler" />
    </context>

    <context name="SettingsVehicle" append="true">
        <action name="HeadlightsCall"       map="Vehicle_HeadlightsCall" />
        <action name="ModdedCycleLights"    map="Vehicle_CycleLights" />
        <action name="CycleEngineStep1"     map="Vehicle_CycleEngine" />
        <action name="CycleEngineStep2"     map="Vehicle_CycleEngine" />
        <action name="CycleDoor"            map="Vehicle_CycleDoor" />
        <action name="CycleWindow"          map="Vehicle_CycleWindow" />
        <action name="CycleDome"            map="Vehicle_CycleDome" />
        <action name="CycleSpoiler"         map="Vehicle_CycleSpoiler" />
    </context>

    <!-- DOORS -->
    <buttonGroup id="IK_Pad_DigitLeftXSquare" timeWindow="0.08f" >
        <button id="IK_Pad_DigitLeft" />
        <button id="IK_Pad_X_SQUARE" />
    </buttonGroup>

    <!-- WINDOWS -->
    <buttonGroup id="IK_Pad_DigitLeftYTriangle" timeWindow="0.08f" >
        <button id="IK_Pad_DigitLeft" />
        <button id="IK_Pad_Y_TRIANGLE" />
    </buttonGroup>

    <!-- SPOILER / HOOD / TRUNK -->
    <buttonGroup id="IK_Pad_DigitRightXSquare" timeWindow="0.08f" >
        <button id="IK_Pad_DigitRight" />
        <button id="IK_Pad_X_SQUARE" />
    </buttonGroup>

    <buttonGroup id="IK_F2_2" timeWindow="0.08f" >
        <button id="IK_F2" />
        <button id="IK_2" />
    </buttonGroup>
    
    <!-- TOGGLE CUSTOM LIGHTS -->
    <buttonGroup id="IK_Pad_DigitDownLeftShoulder" timeWindow="0.08f" >
        <button id="IK_Pad_DigitDown" />
        <button id="IK_Pad_LeftShoulder" />
    </buttonGroup>

    <buttonGroup id="IK_F1_1" timeWindow="0.08f" >
        <button id="IK_F1" />
        <button id="IK_1" />
    </buttonGroup>

    <!-- POWER STATE / ENGINE -->
    <buttonGroup id="IK_Pad_DigitLeftACross" timeWindow="0.08f" >
        <button id="IK_Pad_DigitLeft" />
        <button id="IK_Pad_A_CROSS" />
    </buttonGroup>

    <!-- INTERIOR LIGHT / CRYSTAL DOME -->
    <buttonGroup id="IK_Pad_DigitLeftBCircle" timeWindow="0.08f" >
        <button id="IK_Pad_DigitLeft" />
        <button id="IK_Pad_B_CIRCLE" />
    </buttonGroup>

    <mapping name="Vehicle_CycleEngine" type="Button">
        <button id="IK_F1" />
        <button id="IK_Pad_DigitLeftACross" />
    </mapping>

    <mapping name="Vehicle_CycleDoor" type="Button">
        <button id="IK_F2" />
        <button id="IK_Pad_DigitLeftXSquare" />
    </mapping>

    <mapping name="Vehicle_CycleWindow" type="Button">
        <button id="IK_F3" />
        <button id="IK_Pad_DigitLeftYTriangle" />
    </mapping>

    <mapping name="Vehicle_CycleDome" type="Button">
        <button id="IK_F4" />
        <button id="IK_Pad_DigitLeftBCircle" />
    </mapping>

    <mapping name="Vehicle_CycleSpoiler" type="Button">
        <button id="IK_F2_2" />
        <button id="IK_Pad_DigitRightXSquare" />
    </mapping>

    <mapping name="Vehicle_ToggleCustomLights" type="Button">
        <button id="IK_F1_1" />
        <button id="IK_Pad_DigitDownLeftShoulder" />
    </mapping>

    <mapping name="Vehicle_HeadlightsCall" type="Button">
        <button id="IK_A" />
        <button id="IK_Pad_DigitDown" />
    </mapping>

    <hold action="CycleLights"          timeout="99.0" /> <!-- Cancel by using a big timeout -->
	<hold action="VehicleInsideWheel"	timeout="99.0" /> <!-- Cancel by using a big timeout -->
    <hold action="ModdedCycleLights"    timeout="0.25" />
    <hold action="ToggleCustomLights"   timeout="0.25" />
    <hold action="CycleEngineStep1"     timeout="0.25" />
    <hold action="CycleEngineStep2"     timeout="1.0" />
    <hold action="CycleDome"            timeout="0.25" />
    <hold action="CycleDoor"            timeout="0.25" />
    <hold action="CycleSpoiler"         timeout="0.25" />
    <hold action="CycleWindow"          timeout="0.25" />

</bindings>
